<div class="container" id="container">
  <div id="card-session" class="card">
    <div class="card-body">
      <!-- <h5 class="card-title">Universal Code</h5> -->
      <h1 id="offcanvasRightLabel" class="titulo-iniciar" style="text-align:center; margin-bottom: 8%;">Forgot your
        password?</h1>
      <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>

      <div class="row">
        <div class="col-md">
          <div class="form-floating">
            <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'form-control' %>
            <%= f.label :email %>
          </div>
        </div>
      </div>

      <div class="row">
        <div class="d-grid gap-2 col-12 mx-auto mb-4 mt-3" id="resetPass">
          <%= f.submit "Send me reset password instructions", class: 'btn btn-outline-danger reset', id:"btnresetPass" %>
        </div>
      </div>
      <div class="row">
        <div class="d-grid gap-2 col-12 mx-auto" id="resetPass">
          <p><%= link_to "Login", new_session_path(resource_name) %></p>
        </div>
      </div>
      <div class="row">
        <div class="d-grid gap-2 col-12 mx-auto mb-3" id="resetPass">
          <%= link_to "Sign up", new_registration_path(resource_name) %>
        </div>
      </div>
      <% end %>
    </div>
  </div>
</div>