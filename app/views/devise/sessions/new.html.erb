<div class="container" id="container">
  <div id="card-session" class="card">
    <div class="card-body">
      <h1 id="offcanvasRightLabel" class="titulo-iniciar" style="text-align:center;">Log in</h1>
      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="row">
        <div class="col-md">
          <div class="form-floating">
            <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'form-control' %>
            <%= f.label :email%>
          </div>
        </div>
      </div>

      <div class="row">
        <div class="col-md">
          <div class="form-floating">
            <%= f.password_field :password, autocomplete: "current-password", class: 'form-control' %>
            <%= f.label :password %>
          </div>
        </div>
      </div>

      <% if devise_mapping.rememberable? %>
      <div class="checkbox">
        <%= f.check_box :remember_me %>
        <%= f.label :remember_me %>
      </div>
      <% end %>

      <div class="row" id="btnSession">
        <div class="d-grid gap-2 col-6 mx-auto mb-3">
          <%= f.submit "Log in", class: 'btn btn-warning login' %>
        </div>
      </div>
      <div class="row" id="link_session">
        <div class="signUp">
          <%= render "devise/shared/links", class:"links"%>
        </div>
      </div>
      <% end %>
    </div>
  </div>
</div>